@model IEnumerable<RecordStore.Models.Invoice>

@{
    ViewBag.Title = "Details";
}

<p>
    @Html.ActionLink("Create New", "CreateInvoice")|
    @Html.ActionLink("Back to List", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingPostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingPostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditInvoice", new { invoiceid = item.InvoiceId, customerid = item.CustomerId, invoicedate = item.InvoiceDate, billingaddress = item.BillingAddress,
                    billingcity = item.BillingCity, billingstate = item.BillingState, billingcountry = item.BillingCountry, billingpostalcode = item.BillingPostalCode, total = item.Total}) |
                @Html.ActionLink("Delete", "DeleteInvoice", new { invoiceid = item.InvoiceId })
            </td>
        </tr>
    }

</table>
